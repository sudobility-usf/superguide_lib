{
  "name": "@sudobility/superguide_lib",
  "version": "0.0.9",
  "description": "Business logic library for Starter with Zustand stores",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "build:watch": "bunx tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx eslint src/",
    "lint:fix": "bunx eslint src/ --fix",
    "format": "bunx prettier --write \"src/**/*.ts\"",
    "format:check": "bunx prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify": "bun run typecheck && bun run lint && bun run test && bun run build"
  },
  "keywords": [
    "superguide",
    "business-logic",
    "zustand",
    "react",
    "typescript"
  ],
  "author": "Sudobility",
  "license": "BUSL-1.1",
  "peerDependencies": {
    "@sudobility/types": "^1.9.54",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "zustand": ">=5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@sudobility/superguide_client": "^0.0.11",
    "@sudobility/superguide_types": "^0.0.7",
    "@sudobility/types": "^1.9.54",
    "@tanstack/react-query": "^5.90.5",
    "@testing-library/react": "^16.3.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.4.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.4",
    "typescript": "~5.9.3",
    "vitest": "^4.0.15",
    "zustand": "^5.0.8"
  }
}
